{
    "dataset_reader": {
        "type": "bert-drop",
        "tokenizer": {
            "type": "bert-drop",
            "pretrained_model": "bert-base-uncased"
        },
        "token_indexers": {
            "tokens": {
                "type": "bert-drop",
                "pretrained_model": "bert-base-uncased"
            }
        },
        "allowed_datasets": "all"
    },
    "iterator": {
        "type": "basic",
        "batch_size": 4
    },
    "model": {
        "type": "augmented_bert",
        "bert_pretrained_model": "bert-base-uncased",
        "dropout_prob": 0.1
    },
    "train_data_path": "data/all_datasets/train",
    "validation_data_path": "data/all_datasets/dev",
    "trainer": {
        "cuda_device": 0,
        "keep_serialized_model_every_num_seconds": 3600,
        "num_serialized_models_to_keep": 8,
        "num_epochs": 10,
        "optimizer": {
            "type": "bert_adam",
            "lr": 1e-05
        },
        "patience": 10,
        "summary_interval": 100,
        "validation_metric": "+f1"
    }
}